<UserControl x:Class="SE400.N22.PMCL.Theme.Form.LoadingForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:fa="http://schemas.fontawesome.io/icons/"
             xmlns:local="clr-namespace:SE400.N22.PMCL.Theme.Form" 
             xmlns:convert="clr-namespace:SE400.N22.PMCL.Utils"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <convert:VisibilityConverter x:Key="VisibilityConverter"/>
    </UserControl.Resources>
    <Grid Background="Gray" Opacity="0.5">
        <fa:ImageAwesome  Icon="StopCircle" Spin="True" SpinDuration="4" Margin="5"/>
    </Grid>
</UserControl>
