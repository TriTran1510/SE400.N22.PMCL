<Window x:Class="SE400.N22.PMCL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SE400.N22.PMCL"
        mc:Ignorable="d"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        WindowStyle="None"
        Title="StockMarketAnalyze" Height="600" Width="920">
    <Border Background="White"
            CornerRadius="20">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock Text="StockMarket"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       FontSize="20"
                       Foreground="#1F8DF7"
                       Margin="20,0,0,0"/>
            <Border Grid.Row="1"
                    CornerRadius="20"
                    Background="#e6f3ff"
                    Margin="10,10,10,10">
                <StackPanel >
                    
                </StackPanel>
            </Border>
            
            <TextBox Grid.Column="1"
                     Width="250"
                     Height="40"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Left"
                     FontSize="15"
                     Margin="10,0,0,0"
                     Style="{StaticResource SearchBarTextBox}"/>

            <Grid 
                Grid.Row="1"
                Grid.Column="1"
                HorizontalAlignment="Left" Height="310" VerticalAlignment="Top" Width="625">
                <DataGrid AutoGenerateColumns="False" HorizontalAlignment="Left" Margin="14,55,0,46" Name="dataGridCustomers" Width="575" ItemsSource="{Binding Path=LoadDataBinding}" CanUserResizeRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Path=high}" Header="high" Width="100" IsReadOnly="True" />
                        <DataGridTextColumn Binding="{Binding Path=low}" Header="low" Width="100" IsReadOnly="True" />
                        
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </Border>
</Window>
